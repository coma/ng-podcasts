.d-player
	position relative
	padding 0 0 55.95642076557465% 0
	border-radius $radius $radius 0 0
	background $colors['darker']

.d-player-window
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	border-radius $radius $radius 0 0
	overflow hidden

.d-player-loading
	position absolute
	top 50%
	left 50%
	font-size 60px
	width 1em
	height 1em
	margin -0.8em 0 0 -0.2em
	background: $colors['darker'] url(loading.gif) no-repeat center;
	background-size cover

.d-player-error
	font-weight 500
	font-size 2rem
	color $colors['light'];
	background $colors['error'];
	border-radius $radius

	& > div
		position absolute
		top 50%
		right 0
		left 0
		margin -.5em 0 0 0
		text-align center

.d-player-progress
	position absolute
	top 100%
	right 0
	left 0
	background $colors['grey'];
	border-radius 0 0 $radius $radius
	overflow hidden

	& > div
		height .5rem
		background $colors['high'];

