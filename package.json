{
    "name"           : "ng-podcasts",
    "description"    : "AngularJS podcast viewer",
    "homepage"       : "https://ng-podcasts.heroku.com",
    "version"        : "0.0.0",
    "license"        : "None",
    "private"        : true,
    "authors"        : [
        "Eduardo Garc√≠a Sanz <eduardo@comakai.com>"
    ],
    "config"         : {
        "port": 5000,
        "rss" : "http://rss.cnn.com/services/podcasting/ac360/rss.xml"
    },
    "keywords"       : [],
    "dependencies"   : {
        "angular"            : "1.4",
        "angular-sanitize"   : "1.4",
        "babel-preset-es2015": "^6.1.18",
        "babelify"           : "^7.2.0",
        "browserify"         : "11.0",
        "del"                : "1.2",
        "envify"             : "3.4",
        "express"            : "4.13",
        "gulp"               : "3.9",
        "gulp-stylus"        : "2.0",
        "gulp-uglify"        : "1.2",
        "run-sequence"       : "1.1",
        "stringify"          : "3.1",
        "vinyl-buffer"       : "1.0",
        "vinyl-source-stream": "1.1"
    },
    "devDependencies": {
        "eslint"         : "1.2",
        "forever-monitor": "1.6",
        "gulp-livereload": "3.8",
        "gulp-notify"    : "2.2",
        "gulp-open"      : "1.0",
        "gulp-plumber"   : "1.0",
        "gulp-watch"     : "4.3",
        "jsdom"          : "6.3",
        "mocha"          : "2.3",
        "proxyquire"     : "1.7",
        "should"         : "7.1",
        "watchify"       : "3.3"
    },
    "scripts"        : {
        "lint"       : "eslint src",
        "test"       : "npm run lint && mocha",
        "build"      : "NODE_ENV='production' gulp deploy",
        "postinstall": "npm run build",
        "prestart"   : "npm i",
        "start"      : "node run"
    },
    "engines"        : {
        "node": "4.2"
    },
    "browserify"     : {
        "transform": [
            [
                "babelify",
                {
                    "presets": [
                        "es2015"
                    ]
                }
            ],
            "stringify",
            "envify"
        ]
    },
    "eslintConfig"   : {
        "ecmaFeatures": {
            "modules"       : true,
            "generators"    : true,
            "arrowFunctions": true
        },
        "env"         : {
            "browser": true,
            "node"   : true,
            "es6"    : true
        },
        "rules"       : {
            "strict"                     : 0,
            "new-cap"                    : 0,
            "eqeqeq"                     : 2,
            "curly"                      : 2,
            "quotes"                     : [
                1,
                "single"
            ],
            "no-unreachable"             : 2,
            "space-before-blocks"        : 2,
            "space-before-function-paren": 2,
            "no-multi-spaces"            : 0,
            "key-spacing"                : 0,
            "no-mixed-requires"          : 0,
            "generator-star-spacing"     : [
                2,
                {
                    "before": true,
                    "after" : false
                }
            ]
        }
    }
}
